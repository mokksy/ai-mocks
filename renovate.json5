{
  // https://www.augmentedmind.de/2023/07/30/renovate-bot-cheat-sheet/
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":rebaseStalePrs"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "me.kpavlov.project"
      ],
      "enabled": false
    },
    {
      "description": "Automatically merge minor and patch-level updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
    }
  ]
}
